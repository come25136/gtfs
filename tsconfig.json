{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "*": ["types/*"]
    },
    "pretty": true,
    "newLine": "LF"
  },
  "exclude": [".history/", "dist"]
}
