{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "pretty": true,
    "newLine": "LF"
  },
  "exclude": [
    ".history/",
    "dist"
  ]
}
